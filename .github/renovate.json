{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:best-practices",
    ":automergePatch",
    ":disableRateLimiting",
    ":gitSignOff",
    ":semanticCommits",
    "customManagers:biomeVersions"
  ],
  "customManagers": [
    {
      "customType": "regex",
      "managerFilePatterns": [
        "/(^|/)(workflow-templates|\\.(?:github|gitea|forgejo)/(?:workflows|actions))/.+\\.ya?ml$/",
        "/(^|/)action\\.ya?ml$/"
      ],
      "matchStrings": ["GHALINT_VERSION: (?<currentValue>.*?)\\n"],
      "datasourceTemplate": "github-releases",
      "packageNameTemplate": "suzuki-shunsuke/ghalint"
    }
  ],
  "labels": ["dependencies"],
  "lockFileMaintenance": {
    "enabled": true,
    "automerge": true
  },
  "minimumReleaseAge": "3 days",
  "packageRules": [
    {
      "groupName": "cloudflare packages",
      "matchSourceUrls": [
        "https://github.com/cloudflare/workerd",
        "https://github.com/cloudflare/workers-sdk"
      ]
    },
    {
      "groupName": "hono packages",
      "matchSourceUrls": [
        "https://github.com/honojs/hono",
        "https://github.com/honojs/honox",
        "https://github.com/honojs/middleware",
        "https://github.com/honojs/vite-plugins"
      ]
    },
    {
      "matchManagers": ["npm"],
      "matchPackageNames": ["@cloudflare/workers-types"],
      "matchUpdateTypes": ["minor", "patch"],
      "automerge": true
    },
    {
      "matchManagers": ["github-actions"],
      "addLabels": ["github_actions"],
      "automerge": false
    },
    {
      "matchManagers": ["custom.regex"],
      "matchPackageNames": ["suzuki-shunsuke/ghalint"],
      "addLabels": ["github_actions"],
      "automerge": false
    }
  ],
  "rangeStrategy": "bump",
  "schedule": ["* 0-4 * * *"],
  "timezone": "Asia/Tokyo"
}
